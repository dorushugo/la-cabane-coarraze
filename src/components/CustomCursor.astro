---
// Cursor custom style Awwwards - desktop uniquement, masqu√© sur touch
---

<div class="custom-cursor" id="customCursor" aria-hidden="true">
  <div class="cursor-dot"></div>
  <div class="cursor-ring"></div>
</div>

<style>
  .custom-cursor {
    position: fixed;
    top: 0;
    left: 0;
    z-index: var(--z-cursor);
    pointer-events: none;
  }
  
  .custom-cursor.hidden {
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .cursor-dot {
    width: 6px;
    height: 6px;
    background: var(--color-pine);
    border-radius: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    transition: transform 0.2s ease, background 0.2s ease;
  }
  
  .custom-cursor.hover .cursor-dot {
    transform: translate(-50%, -50%) scale(1.5);
    background: var(--color-wood);
  }
  
  .cursor-ring {
    width: 32px;
    height: 32px;
    border: 1px solid var(--color-pine);
    border-radius: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    transition: width 0.25s cubic-bezier(0.4, 0, 0.2, 1),
                height 0.25s cubic-bezier(0.4, 0, 0.2, 1),
                border-color 0.2s ease,
                opacity 0.2s ease;
    opacity: 0.6;
  }
  
  .custom-cursor.hover .cursor-ring {
    width: 52px;
    height: 52px;
    border-color: var(--color-wood);
    opacity: 0.9;
  }
  
  @media (hover: none), (pointer: coarse) {
    .custom-cursor {
      display: none !important;
    }
  }
  body {
    cursor: none;
  }
  
  a, button, .interactive-element {
    cursor: none !important;
  }
</style>

<script>
  (function initCursor() {
    const cursor = document.getElementById('customCursor');
    if (!cursor) return;

    const dot = cursor.querySelector('.cursor-dot');
    const ring = cursor.querySelector('.cursor-ring');
    if (!dot || !ring) return;

    let mouseX = 0, mouseY = 0;
    let ringX = 0, ringY = 0;

    const isTouch = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
    if (isTouch) {
      cursor.classList.add('hidden');
      return;
    }

    document.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      cursor.classList.remove('hidden');
    });

    document.addEventListener('mouseleave', () => cursor.classList.add('hidden'));

    // Hover sur liens et boutons
    const updateHoverElements = () => {
      document.querySelectorAll('a, button, .interactive-element').forEach(el => {
        el.addEventListener('mouseenter', () => cursor.classList.add('hover'), { once: true });
        el.addEventListener('mouseleave', () => cursor.classList.remove('hover'), { once: true });
      });
    };
    
    updateHoverElements();

    function animate() {
      dot.style.transform = `translate(${mouseX}px, ${mouseY}px) translate(-50%, -50%)`;
      ringX += (mouseX - ringX) * 0.15;
      ringY += (mouseY - ringY) * 0.15;
      ring.style.transform = `translate(${ringX}px, ${ringY}px) translate(-50%, -50%)`;
      requestAnimationFrame(animate);
    }
    animate();
  })();
</script>